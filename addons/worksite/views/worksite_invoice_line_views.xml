<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- worksite.invoice.line inherit tree view -->
    <record id="worksite_invoice_line_inh_list" model="ir.ui.view">
        <field name="name">worksite.invoice.line.inherit.view.list</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field/list/field[@name='quantity']" position="after">
                <field name="costPc" optional="hide" />
                <field name="spanAll" optional="hide" />
                <field name="worksite_id" optional="show" />
                <field name="ddt_id" optional="show" />
            </xpath>
        </field>
    </record>
</odoo>