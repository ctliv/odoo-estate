<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- worksite.invoice list view inherit account.move list view -->
    <record id="worksite_invoice_inh_list" model="ir.ui.view">
        <field name="name">worksite.invoice.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="decoration-success">status == 'checked'</attribute>
            </xpath>
            <xpath expr="//list" position="inside">
                <field name="status" optional="hide"/>
            </xpath>
        </field>
    </record>
    
    
    <!-- worksite.invoice form view inherit account.move form view -->
    <record id="worksite_invoice_inh_form" model="ir.ui.view">
        <field name="name">worksite.invoice.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//widget[@name='web_ribbon']" position="before">
                <widget name="web_ribbon" title="Validata" bg_color="text-bg-primary" 
                    invisible="status != 'checked' or move_type not in ('in_invoice', 'in_receipt', 'in_refund')"/>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <label for="docType" string="Tipologia" invisible="move_type not in ('in_invoice', 'in_receipt', 'in_refund')" />
                <field name="docType" nolabel="1" invisible="move_type not in ('in_invoice', 'in_receipt', 'in_refund')" />
                <label for="status" string="Stato" invisible="move_type not in ('in_invoice', 'in_receipt', 'in_refund')" />
                <field name="status" nolabel="1" />
            </xpath>
        </field>
    </record>
    
</odoo>